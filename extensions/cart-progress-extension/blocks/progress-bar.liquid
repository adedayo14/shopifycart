{% comment %}
This block displays a cart progress bar with free shipping, gift and discount goals.
The progress bar updates in real time based on the cart total.
{% endcomment %}

<div id="progress-bar-container"
     class="cart-progress-bar"
     data-threshold="{{ block.settings.free_shipping_threshold }}"
     data-gift-threshold="{{ block.settings.gift_threshold }}"
     data-discount-threshold="{{ block.settings.discount_threshold }}"
     data-currency="{{ shop.currency }}"
     data-gift-product-id="{{ block.settings.gift_product.id }}"
     data-bar-style="{{ block.settings.bar_style }}"
     data-hide-when-reached="{{ block.settings.hide_when_reached }}">
  
  <div class="progress-bar-track" 
       style="background-color: {{ block.settings.bar_background }}; 
              height: {{ block.settings.font_size }}px; 
              border-radius: {{ block.settings.corner_radius }}px; 
              overflow: hidden;">
    <div class="progress-bar-fill" 
         style="background-color: {{ block.settings.bar_color }}; 
                width: 0%; 
                height: 100%; 
                transition: width 0.4s;"></div>
  </div>
  
  <p class="progress-bar-message" 
     style="margin-top: 8px; 
            color: {{ block.settings.text_color }}; 
            font-size: {{ block.settings.font_size }}px;"
     {% if block.settings.a11y_live_region %}role="status" aria-live="polite"{% endif %}>
    {{ block.settings.free_shipping_text }}
  </p>
</div>

{% comment %} Manual Product Recommendations {% endcomment %}
{% if block.settings.show_recommendations %}
  <div class="product-recommendations">
    {% for block in section.blocks %}
      {% case block.type %}
        {% when 'product_recommendation' %}
          {% assign product = block.settings.product %}
          {% if product != blank %}
            <div class="recommendation-item" data-product-id="{{ product.id }}">
              <img src="{{ product.featured_image | img_url: '100x100' }}" alt="{{ product.title }}">
              <h4>{{ product.title }}</h4>
              <p class="price">{{ product.price | money }}</p>
              
              {% if product.has_only_default_variant %}
                <button class="add-to-cart-btn" 
                        data-variant-id="{{ product.selected_or_first_available_variant.id }}"
                        data-quantity="1">
                  {{ block.settings.cta_text | default: "Add+" }}
                </button>
              {% else %}
                <div class="variant-selectors">
                  {% for option in product.options_with_values %}
                    <label for="option-{{ option.name | handle }}">{{ option.name }}:</label>
                    <select name="option-{{ option.name | handle }}" data-option-position="{{ option.position }}">
                      {% for value in option.values %}
                        <option value="{{ value }}">{{ value }}</option>
                      {% endfor %}
                    </select>
                  {% endfor %}
                  <button class="add-to-cart-btn" data-product-id="{{ product.id }}">
                    {{ block.settings.cta_text | default: "Add+" }}
                  </button>
                </div>
              {% endif %}
            </div>
          {% endif %}
      {% endcase %}
    {% endfor %}
  </div>
{% endif %}

{% schema %}
