      "label": "Text Color",
      "default": "#000000"
    },
    {
      "type": "range",
      "id": "font_size",
      "label": "Font Size",
      "min": 12,
      "max": 24,
      "step": 1,
      "default": 14
    },
    {
      "type": "range",
      "id": "corner_radius",
      "label": "Corner Radius",
      "min": 0,
      "max": 20,
      "step": 1,
      "default": 4
    },
    {
      "type": "select",
      "id": "position",
      "label": "Position",
      "options": [
        { "value": "cart_page", "label": "Cart Page" },
        { "value": "cart_drawer", "label": "Cart Drawer" },
        { "value": "both", "label": "Both" }
      ],
