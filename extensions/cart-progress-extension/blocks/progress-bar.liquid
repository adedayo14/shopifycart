      "type": "checkbox",
      "id": "enable_gift_goal",
      "label": "Enable Gift Goal",
      "default": false
    },
    {
      "type": "number",
      "id": "gift_threshold",
      "label": "Gift Threshold",
      "default": 75
    },
    {
      "type": "product",
      "id": "gift_product",
      "label": "Gift Product"
    },
    {
      "type": "text",
      "id": "gift_text",
      "label": "Gift Text",
      "default": "Free gift unlocked!"
    },
    {
      "type": "checkbox",
      "id": "hide_when_reached",
      "label": "Hide bar when all goals reached",
      "default": false
    },
    {
      "type": "header",
      "content": "Design"
    },
    {
      "type": "select",
      "id": "bar_style",
      "label": "Bar Style",
      "options": [
