      "id": "a11y_live_region",
      "label": "Accessibility Live Region",
      "default": true
    },
    {
      "type": "header",
      "content": "Recommendations"
    },
    {
      "type": "checkbox",
      "id": "show_recommendations",
      "label": "Show Product Recommendations",
      "default": true
    }
  ],
  "blocks": [
    {
      "type": "product_recommendation",
      "name": "Product Recommendation",
      "settings": [
        {
          "type": "product",
          "id": "product",
          "label": "Product"
        },
        {
          "type": "checkbox",
          "id": "preselect_first_available",
