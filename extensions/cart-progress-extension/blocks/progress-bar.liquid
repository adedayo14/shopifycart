      "label": "Enable Discount Goal",
      "default": false
    },
    {
      "type": "number",
      "id": "discount_threshold",
      "label": "Discount Threshold",
      "default": 100
    },
    {
      "type": "text",
      "id": "discount_code",
      "label": "Discount Code",
      "default": "SAVE10"
    },
    {
      "type": "text",
