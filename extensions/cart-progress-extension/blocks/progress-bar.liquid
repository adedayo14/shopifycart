{% comment %}
This block displays a cart progress bar with free shipping, gift and discount goals.
The progress bar updates in real time based on the cart total.
{% endcomment %}

<div id="progress-bar-container"
     class="cart-progress-bar"
     data-threshold="{{ block.settings.free_shipping_threshold }}"
     data-gift-threshold="{{ block.settings.gift_threshold }}"
     data-discount-threshold="{{ block.settings.discount_threshold }}"
     data-currency="{{ shop.currency }}"
     data-gift-product-id="{{ block.settings.gift_product.id }}"
     data-bar-style="{{ block.settings.bar_style }}"
     data-hide-when-reached="{{ block.settings.hide_when_reached }}">
  
  <div class="progress-bar-track" 
       style="background-color: {{ block.settings.bar_background }}; 
              height: {{ block.settings.font_size }}px; 
              border-radius: {{ block.settings.corner_radius }}px; 
              overflow: hidden;">
    <div class="progress-bar-fill" 
         style="background-color: {{ block.settings.bar_color }}; 
                width: 0%; 
                height: 100%; 
                transition: width 0.4s;"></div>
  </div>
  
  <p class="progress-bar-message" 
     style="margin-top: 8px; 
            color: {{ block.settings.text_color }}; 
            font-size: {{ block.settings.font_size }}px;"
     {% if block.settings.a11y_live_region %}role="status" aria-live="polite"{% endif %}>
    {{ block.settings.free_shipping_text }}
  </p>
</div>

{% comment %} Product Recommendations - Manual Configuration Only {% endcomment %}
{% if block.settings.show_recommendations %}
  <div class="product-recommendations">
    {% assign product1 = block.settings.product_1 %}
    {% assign product2 = block.settings.product_2 %}
    {% assign product3 = block.settings.product_3 %}
    
    {% for product in (1..3) %}
      {% capture product_key %}product_{{ product }}{% endcapture %}
      {% assign current_product = block.settings[product_key] %}
      
      {% if current_product != blank %}
        <div class="recommendation-item" data-product-id="{{ current_product.id }}">
          <img src="{{ current_product.featured_image | image_url: width: 100, height: 100 }}" 
               alt="{{ current_product.title }}"
               width="100" 
               height="100">
          <h4>{{ current_product.title }}</h4>
          <p class="price">{{ current_product.price | money }}</p>
          
          {% if current_product.has_only_default_variant %}
            <button class="add-to-cart-btn" 
                    data-variant-id="{{ current_product.selected_or_first_available_variant.id }}"
                    data-quantity="1">
              {{ block.settings.cta_text | default: "Add+" }}
            </button>
          {% else %}
            <div class="variant-selectors">
              {% for option in current_product.options_with_values %}
                <label for="option-{{ option.name | handle }}-{{ product }}">{{ option.name }}:</label>
                <select name="option-{{ option.name | handle }}-{{ product }}" data-option-position="{{ option.position }}">
                  {% for value in option.values %}
                    <option value="{{ value }}">{{ value }}</option>
                  {% endfor %}
                </select>
              {% endfor %}
              <button class="add-to-cart-btn" data-product-id="{{ current_product.id }}">
                {{ block.settings.cta_text | default: "Add+" }}
              </button>
            </div>
          {% endif %}
        </div>
      {% endif %}
    {% endfor %}
  </div>
{% endif %}

<script src="{{ 'cart-progress.js' | asset_url }}" defer></script>

